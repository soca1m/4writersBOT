# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# Testing Mode
# ============================================
# Set to true to use mock data instead of real API
USE_MOCK_API=false

# ============================================
# OpenRouter API (Unified LLM Gateway)
# ============================================
# Get your key at: https://openrouter.ai/settings/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# Model Selection (OpenRouter format)
# ============================================
# Fast model for simple tasks (analysis, citation integration)
FAST_MODEL=anthropic/claude-haiku-4.5

# Smart model for complex tasks (writing, rewriting)
SMART_MODEL=anthropic/claude-sonnet-4.5

# Writer model for academic text generation
WRITER_MODEL=anthropic/claude-sonnet-4.5

# Analyzer model for requirements analysis
ANALYZER_MODEL=anthropic/claude-haiku-4.5

# ============================================
# Available Models Examples:
# ============================================
# Anthropic Claude:
#   - anthropic/claude-3.5-sonnet (recommended for writing)
#   - anthropic/claude-3-opus (most powerful)
#   - anthropic/claude-3-haiku (fastest, cheapest)
#
# OpenAI GPT:
#   - openai/gpt-4o (latest GPT-4)
#   - openai/gpt-4o-mini (fast, cheap)
#   - openai/gpt-4-turbo
#
# Google Gemini:
#   - google/gemini-2.0-flash-exp:free (free tier)
#   - google/gemini-pro
#
# Meta Llama:
#   - meta-llama/llama-3.1-405b-instruct
#   - meta-llama/llama-3.1-70b-instruct
#
# Mistral:
#   - mistralai/mistral-large
#   - mistralai/mixtral-8x7b-instruct
#
# See full list: https://openrouter.ai/models

# ============================================
# Optional: Tavily API (for source search)
# ============================================
TAVILY_API_KEY=your_tavily_api_key_here

# ============================================
# Undetectable AI API (for AI detection)
# ============================================
# Get your key at: https://undetectable.ai/developer
# Used for detecting AI-generated content
UNDETECTABLE_API_KEY=your_undetectable_api_key_here
